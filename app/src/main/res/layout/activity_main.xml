    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.battleship.app.MainActivity">
        <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/primary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tracking"
            android:layout_below="@+id/primary"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Primary Grid"
            android:id="@+id/plabel"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Track Grid"
            android:id="@+id/tlabel"
            android:layout_alignTop="@+id/tracking"
            android:layout_toLeftOf="@+id/tracking"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xcoord"
            android:layout_below="@+id/tracking"
            android:layout_alignLeft="@+id/ycoord"
            android:layout_alignStart="@+id/ycoord"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ycoord"
            android:layout_below="@+id/xcoord"
            android:layout_centerHorizontal="true"/>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/play"
            android:layout_below="@+id/ycoord"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="X Coord."
            android:id="@+id/xclabel"
            android:layout_alignBottom="@+id/xcoord"
            android:layout_toLeftOf="@+id/tracking"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Y Coord."
            android:id="@+id/yclabel"
            android:layout_alignBottom="@+id/ycoord"
            android:layout_toLeftOf="@+id/tracking"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/aifeedback"
            android:layout_below="@+id/tracking"
            android:layout_centerHorizontal="true"/>
        </LinearLayout>

        </ScrollView>
    </RelativeLayout>

